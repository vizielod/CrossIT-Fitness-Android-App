<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/WorkoutListElementButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/weight_training_resized" />

        <TextView
            android:id="@+id/WorkoutNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Push day"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/WorkoutRemoveButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:layout_gravity="right|top"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_delete_grey600_48dp_no_transoarency" />

    </FrameLayout>

</LinearLayout>